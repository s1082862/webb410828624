
@{
    ViewBag.Title = "SignUp";
}


<h2>會員註冊</h2>

@using (Html.BeginForm("SignUp", "User", FormMethod.Post))
{
<p>姓名:@Html.TextBox(name: "name")@ViewBag.NameMessage</p>
<p>帳號:@Html.TextBox(name: "account")@ViewBag.AccountMessage</p>
<p>密碼:@Html.TextBox(name: "password")@ViewBag.PasswordMessage</p>
    <p>@ViewBag.Message</p>
    <input type="submit" value="註冊" />
}
